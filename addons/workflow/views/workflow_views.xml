<odoo>
    <record id="view_asset_workflow_tree" model="ir.ui.view">
        <field name="name">asset.workflow.tree</field>
        <field name="model">asset.workflow</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_workflow_form" model="ir.ui.view">
        <field name="name">asset.workflow.form</field>
        <field name="model">asset.workflow</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
                <field name="definition_ids">
                    <tree>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="group_id"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="action_workflow" model="ir.actions.act_window">
        <field name="name">Workflows</field>
        <field name="res_model">asset.workflow</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
