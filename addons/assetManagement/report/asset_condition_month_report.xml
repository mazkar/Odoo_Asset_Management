<odoo>
  <template id="report_condition_month">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page">
          <h2>Inspection Report - <t t-esc="doc.bulan_tahun"/></h2>
          <table class="table table-sm">
            <tbody>
              <tr>
                <td><strong>Inspection Date</strong></td>
                <td><t t-esc="doc.tanggal"/></td>
                <td><strong>Inspector</strong></td>
                <td><t t-esc="doc.inspect_by.name"/></td>
              </tr>
              <tr>
                <td><strong>ACK By</strong></td>
                <td colspan="3">
                  <t t-esc="' ,'.join([u.name for u in doc.approved_user_ids])"/>
                </td>
              </tr>
            </tbody>
          </table>

          <br/>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>NO</th>
                <th>Location</th>
                <th>Nama Barang</th>
                <th>KONDISI B</th>
                <th>KONDISI R</th>
                <th>JML</th>
              </tr>
            </thead>
            <tbody>
              <tr t-foreach="doc.line_ids" t-as="line" t-esc-options='{"format": false}'>
                <td><t t-esc="line.sequence"/></td>
                <td><t t-esc="line.lokasi_nama"/></td>
                <td><t t-esc="line.asset_id.name"/></td>
                <td><t t-esc="line.kondisi_baik"/></td>
                <td><t t-esc="line.kondisi_rusak"/></td>
                <td><t t-esc="line.jumlah"/></td>
              </tr>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
