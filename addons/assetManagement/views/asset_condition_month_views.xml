<odoo>
    <!-- Tree View for x_asset.condition.month -->
    <record id="view_x_asset_condition_month_tree" model="ir.ui.view">
        <field name="name">x_asset.condition.month.tree</field>
        <field name="model">x_asset.condition.month</field>
        <field name="arch" type="xml">
            <tree string="Monthly Condition Tree">
                <field name="item_id"/>
                <field name="tanggal"/>
                <field name="bulan_tahun" readonly="1"/>
                <field name="jumlah"/>
                <field name="kondisi_baik"/>
                <field name="kondisi_rusak"/>
                <field name="inspect_by"/>
            </tree>
        </field>
    </record>

    <!-- Form View for x_asset.condition.month -->
    <record id="view_x_asset_condition_month_form" model="ir.ui.view">
        <field name="name">x_asset.condition.month.form</field>
        <field name="model">x_asset.condition.month</field>
        <field name="arch" type="xml">
            <form string="Monthly Condition Form">
              <sheet>
                  
                     <div class="oe_title"> 
                         <h1> 
                           <field name="item_id"/>
                         </h1>
                     </div>
                <group>
                     <field name="inspect_by" readonly="1"/>
                     <field name="tanggal"/>
                </group>
                 <notebook>
                  <page string="Inspection Details">
                    <group >
                     
                        <field name="bulan_tahun" readonly="1"/>
                        <field name="jumlah" readonly="1"/>
                        <field name="kondisi_baik"/>
                        <field name="kondisi_rusak"/>
                    </group> 
                  </page>   
                 </notebook>
              
                </sheet>

                 <!-- ðŸ§© Tambahkan Chatter di bawah sheet -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_x_asset_condition_month" model="ir.actions.act_window">
        <field name="name">Monthly Inspections</field>
        <field name="res_model">x_asset.condition.month</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_x_asset_condition_month_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new monthly condition record!
            </p>
        </field>
    </record>
</odoo>
