<odoo>
  <!-- Tree View -->
  <record id="view_x_asset_condition_month_tree" model="ir.ui.view">
    <field name="name">x_asset.condition.month.tree</field>
    <field name="model">x_asset.condition.month</field>
    <field name="arch" type="xml">
      <tree>
        <field name="item_id"/>
        <field name="tanggal"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_x_asset_condition_month_form" model="ir.ui.view">
    <field name="name">x_asset.condition.month.form</field>
    <field name="model">x_asset.condition.month</field>
    <field name="arch" type="xml">
      <form string="Monthly Condition Form">
        <header>
          <button name="action_submit"
                  string="Submit"
                  type="object"
                  class="btn-primary"
                  oe_visibility="show_submit"
                  depends="show_submit"/>

          <button name="action_approve"
                  string="Approve"
                  type="object"
                  class="btn-success"
                  oe_visibility="show_approve"
                  depends="show_approve"/>

          <button name="action_reject"
                  string="Reject"
                  type="object"
                  class="btn-danger"
                  oe_visibility="show_reject"
                  depends="show_reject"/>

          <field name="state" widget="statusbar"
                 statusbar_visible="draft,on_approval,approved,rejected"
                 statusbar_colors='{"draft":"blue", "on_approval":"orange", "approved":"green", "rejected":"red"}'/>
        </header>

        <sheet>
          <group>
            <field name="item_id"/>
            <field name="tanggal"/>
            <field name="bulan_tahun" readonly="1"/>
            <field name="jumlah" readonly="1"/>
            <field name="kondisi_baik"/>
            <field name="kondisi_rusak"/>
            <field name="keterangan"/>
            <field name="inspect_by" readonly="1"/>
            <field name="state" widget="badge"/>
          </group>

          <group string="Approval">
            <field name="approval_route_ids" widget="many2many_tags"/>
            <field name="current_approval_index"/>
          </group>

          <group string="DEBUG (Remove in production)">
            <field name="show_submit"/>
            <field name="show_approve"/>
            <field name="show_reject"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
